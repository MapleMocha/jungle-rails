
<% product = Product.find_by(id: line_item.product_id) %>
<tr>

  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <h3>Quantity:</h3>
    <p>
      <%= line_item.quantity %>
    </p>

  </td>
  <td>
    <h3>Total:</h3>
      <p><%= line_item.total_price_cents %></p>
  </td>
</tr>
